node {
    // Declare myMap at the top level
    def myMap = [:]

    stage('Initialize') {
        // Populate the map
        myMap['name'] = 'Jenkins'
        myMap['version'] = '2.346.1'
        myMap['status'] = 'running'

        echo "Name: ${myMap.name}"
        echo "Version: ${myMap.version}"
    }

    stage('Use Map Data') {
        // Access myMap in the next stage
        echo "Status: ${myMap['status']}"
    }
}
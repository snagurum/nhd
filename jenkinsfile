node {
    stage('Initialize') {
        // Define a map with some key-value pairs
        def myMap = [
            'name'  : 'Jenkins',
            'version': '2.346.1',
            'status': 'running'
        ]

        // Access values in the map
        echo "Name: ${myMap['name']}"
        echo "Version: ${myMap.version}"  // Alternative syntax to access map keys
        echo "Status: ${myMap['status']}"
        
        // Modify a value
        myMap['status'] = 'completed'
        echo "Updated Status: ${myMap['status']}"
    }

    stage('Process') {
        // Add a new entry to the map
        def envDetails = [
            'environment': 'production',
            'region': 'us-east-1'
        ]
        myMap.putAll(envDetails)

        echo "Environment: ${myMap.environment}"
        echo "Region: ${myMap['region']}"
    }
}
